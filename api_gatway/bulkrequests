const axios = require('axios');

// Generate sample user data
function createUserData(index) {
    return {
        userId: `user${index}`,
        email: `user${index}@example.com`,
        deliveryAddress: {
            city: `City${index}`,
            province: `Province${index}`
        }
    };
}

// Send 100 user data requests
async function sendUserRequests(count) {
    console.log('Starting to send requests...');
    for (let i = 0; i < count; i++) {
        const userData = createUserData(i + 1);
        
        try {
            console.log(`Sending request ${i + 1}...`);
            const response = await axios.post('http://localhost:3000/api/users', userData);
            console.log(`Request ${i + 1} Success:`, response.data);
        } catch (error) {
            console.error(`Error on request ${i + 1}:`, error.message);
        }
    }
}

sendUserRequests(100); // Sends 100 requests with sample user data
